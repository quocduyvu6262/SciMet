@page
@model SciMet.Pages.Scientists.IndexModel

@{
    ViewData["Title"] = "Index";
}

<style>
    .header{
        padding: 1%;
    }

</style>

<div class="row justify-content-center display-6 header">Chương Trình Trao Đổi Cá Nhân</div>

<p>
    <a asp-page="Create">Create New</a>
</p>
<form>
    <p>
        Name: <input type="text" asp-for="SearchName" /> &nbsp;&nbsp;&nbsp;&nbsp;
        Research: <input type="text" asp-for="SearchResearch" />
        <input type="submit" value="Filter" />
    </p>
</form>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Scientist[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Scientist[0].Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Scientist[0].Research)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Scientist) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Research)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.ID">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
